<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header_home"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/nav_icon" />

    <TextView
        android:id="@+id/nickname_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar_home"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="Noemi Aliyass"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/atname_home"
        android:layout_below="@+id/nickname_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@NoemiAliyass"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atname_home"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/following_home"
            android:text="170"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="following"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"/>

        <TextView
            android:id="@+id/follower_home"
            android:text="6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="follower"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="6dp"/>

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

</RelativeLayout>